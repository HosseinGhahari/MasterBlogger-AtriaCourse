@using MB.Domain.CommentAgg;
@model MB.Presentation.MVC.Areas.Administrator.Pages.CommentManagement.ListModel
@{
}



<div class="card">
    <div class="card-header">
        <h3 class="float-left">Comments List</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Article</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Opreations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model.Comments)
                {
                    <tr>
                        <td>@comment.Id</td>
                        <td>@comment.Name</td>
                        <td>@comment.Email</td>
                        <td>@comment.Article</td>
                        <td>
                            @if (comment.status == Statuses.New)
                            {
                                <i class="fa fa-eye fa-2x text-danger"></i>
                            }
                            @if (comment.status == Statuses.Canceled)
                            {
                                <i class="fa fa-close fa-2x text-danger"></i>
                            }
                            @if (comment.status == Statuses.Confirmed)
                            {
                                <i class="fa fa-check fa-2x text-success"></i>
                            }
                        </td>
                        <td>@comment.CreationDate</td>
                       @*  <td>
                             <a class="btn btn-warning float-left mr-3" asp-page="./Edit" asp-route-id="@article.Id">Edit</a>
                            @if (article.IsDeleted)
                            {
                                <form method="post" asp-page-handler="Active" class="float-left">
                                    <button class="btn btn-success">Activate</button>
                                    <input type="hidden" name="id" value="@article.Id" />
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Remove" class="float-left">
                                    <button class="btn btn-danger">Remove</button>
                                    <input type="hidden" name="id" value="@article.Id" />
                                </form>
                            }
                        </td>  *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>